{
	"extends": "@tsconfig/node22/tsconfig.json",
	"include": ["src/**/*","src/**/*.ts", "tests/**/*.ts"],
	"exclude": ["node_modules"],
	"compilerOptions": {
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"module": "commonjs",
		"target": "es6",
		"outDir": "./dist",
		"rootDir": "./src",
		"strict": true,
		"typeRoots": ["./node_modules/@types"],
		"types": ["jest"]
	  },
}
